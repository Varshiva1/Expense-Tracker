{
  "name": "expense-tracker",
  "version": "1.0.0",
  "description": "Expense Tracker with Node.js, Express, PostgreSQL, JWT, and Chart.js",
  "type": "module",
  "main": "server/index.js",
  "scripts": {
    "start": "concurrently \"npm run dev\" \"npm run client\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "start:server": "node server/index.js",
    "start:prod": "node server/index.js",
    "dev": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:install": "cd client && npm install"
  },
  "keywords": [
    "expense",
    "tracker",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.0.1",
    "tailwindcss": "^3.4.19"
  }
}
